@model SportStore.Models.Receiver

@{
    ViewData["Title"] = "添加收货地址";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/areaStyle.css" rel="stylesheet" />
<script src="http://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="~/js/charfirstPinyin.js"></script>
<script src="~/js/area.js"></script>

<hr />
<div class="row">
    <div class="col-md-4">
        <form acction="/Address/Create?returnUrl=@(ViewBag.ReturnUrl??"")"  method="post">
            <div class="form-group">
                <label class="control-label">收货人</label>
                <input name="Name" class="form-control" required placeholder="请输入收货人姓名"/>
            </div>
            <div class="form-group">
                <label class="control-label">手机号</label>
                <input name="PhoneNumber" class="form-control" required placeholder="请输入手机号" />
            </div>
            <div class="form-group">
                <label class="control-label">城市</label>
                <input name="Address" class="area_input form-control" id="address" placeholder="请选择城市" required/>
            </div>
            <div class="form-group">
                <label class="control-label">街道</label>
                <input name="Street" class="form-control"  placeholder="请输入具体街道地址" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="添加" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回</a>
</div>
<script>
    $('#address').areaSelector();
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
